class Demo2
{
    static int a=3;
    static int b;
    static void display(int x)
    {
        System.out.println("x="+x);
           System.out.println("a="+a);
              System.out.println("b="+b);
    }
    static
    {
        System.out.println("Static block initialised");
        b=a*4;
    }
}
class DemoStatic2
{
    public static void main(String[]args)
    {
        Demo2.display(20);
    }
}
