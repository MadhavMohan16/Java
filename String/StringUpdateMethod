public class StringUpdateMethod
{
    public static void main(String[]args)
    {
        String s1="This is a demo";
        String s2="Javatpoint is a language website";
        System.out.println(s1.replace("is","was"));
        System.out.println(s1.replaceFirst("is","was"));
        System.out.println(s1.replaceAll("is","was"));
        System.out.println(s1.replaceAll("is(.)","was"));//ismae regular expression apply bhi kr skte hai
        System.out.println(s1.replaceAll("is(.*)","was"));//ismae regular expression apply bhi kr skte hai
        System.out.println(s2.replace("a","e"));
        System.out.println(s2.replaceAll("a","e"));
        System.out.println(s2.replaceAll("\\s",""));//ismae regular expression apply bhi kr skte hai
    }
}
